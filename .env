# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/sourcedb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sourcedb

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_SCHEMA_REGISTRY_URL=http://schema-registry:8081
KAFKA_CONNECT_URL=http://kafka-connect:8083

# AWS/LocalStack Configuration
AWS_ENDPOINT_URL=http://localstack:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1

# Kinesis Configuration
KINESIS_PROCESSED_EVENTS_STREAM=processed-events
KINESIS_USER_ANALYTICS_STREAM=user-analytics
KINESIS_ORDER_ANALYTICS_STREAM=order-analytics
KINESIS_ALERTS_STREAM=real-time-alerts
KINESIS_METRICS_STREAM=aggregated-metrics

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Application Configuration
APP_NAME=Kafka Streaming Project
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Stream Processing Configuration
ENABLE_STREAM_PROCESSING=true
BATCH_SIZE=1000
PROCESSING_TIMEOUT=30
MAX_RETRIES=3
BACKOFF_MULTIPLIER=2.0

# Security Configuration
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30